div(class="col-md-2")
    div(class="navbar navbar-expand-md navbar-light pd-t-16")
      button(class="navbar-toggler", type="button", data-toggle="collapse", data-target="#navbarCono", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
        span(class="navbar-toggler-icon")
      div(id="navbarCono", class="collapse navbar-header")
        each topic in topics
          div(class="navbar-nav w-100 ml-auto")
            if selectedTopic && selectedTopic.name === topic.name
              a(class="nav-link mg-l-pd-l-8 active", href=topic.path)=topic.label
            else
              a(class="nav-link mg-l-pd-l-8", href=topic.path)=topic.label